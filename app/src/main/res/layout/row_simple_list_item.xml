<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="simpleModel"
            type="com.dhiwise.paginationview_sample.model.SimpleModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewRectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        >

        <LinearLayout
            android:id="@+id/linearGroup11935"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPermissionCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="top|start"
                android:text="@{simpleModel.title}"
                tools:text="title" />

            <TextView
                android:id="@+id/txtPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="top|start"
                android:text="@{simpleModel.message}"
                tools:text="msg_allow_permissio" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
